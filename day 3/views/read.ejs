<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/public/stylesheets/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div clasd=" w-full h-full bg-zinc-900 p-10 text-white">
      <a class="text-zinc-500" href="./">back to home</a>
      <h1 class="text-3xl tracking-tighter mb-3">all user</h1>
      <div class="user flex gap-3 flex-wrap">
        <% users.forEach(function(user) { %>
        <div class="user-card bg-zinc-800 p-5 rounded-lg w-64">
          <img
            class="w-full h-40 object-cover rounded-lg mb-3"
            src="<%= user.imgage %>"
            alt="User Image"
          />
          <h2 class="text-xl font-semibold mb-2"><%= user.name %></h2>
          <p class="text-zinc-400 mb-2"><%= user.email %></p>
          <a href="/edit/<%= user._id %>" class="text-blue-500 hover:underline"
            >Edit</a
          >
          <%})%>
        </div>
      </div>
    </div>
  </body>
</html>

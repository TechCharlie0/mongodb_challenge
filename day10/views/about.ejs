    <script>
      // JavaScript to handle section visibility based on navigation clicks
      document.addEventListener("DOMContentLoaded", () => {
        const navLinks = document.querySelectorAll(
          ".w-full.md\\:w-1\\/3 ul li a"
        );
        const sections = document.querySelectorAll(
          ".w-full.md\\:w-2\\/3 section"
        );

        navLinks.forEach((link) => {
          link.addEventListener("click", (e) => {
            e.preventDefault(); // Prevent default anchor link behavior
            const targetId = e.target.getAttribute("href").substring(1);

            // Remove active class from all links and add to clicked one
            navLinks.forEach((nav) => {
              nav.classList.remove(
                "bg-blue-100",
                "text-blue-700",
                "font-semibold",
                "hover:bg-blue-200"
              );
              nav.classList.add("hover:bg-gray-100", "text-gray-700");
            });
            e.target.classList.add(
              "bg-blue-100",
              "text-blue-700",
              "font-semibold",
              "hover:bg-blue-200"
            );
            e.target.classList.remove("hover:bg-gray-100", "text-gray-700");

            // Hide all sections and show the target one
            sections.forEach((section) => {
              section.classList.add("hidden");
            });
            document.getElementById(targetId).classList.remove("hidden");
          });
        });

        // Highlight the "Overview" link on initial load
        const initialActiveLink = document.querySelector(
          '.w-full.md\\:w-1\\/3 ul li a[href="#overview"]'
        );
        if (initialActiveLink) {
          initialActiveLink.classList.add(
            "bg-blue-100",
            "text-blue-700",
            "font-semibold",
            "hover:bg-blue-200"
          );
          initialActiveLink.classList.remove(
            "hover:bg-gray-100",
            "text-gray-700"
          );
        }
      });
    </script>

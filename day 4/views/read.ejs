<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Users</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-zinc-900 text-white min-h-screen p-10">
    <a class="text-zinc-400 hover:text-white block mb-6" href="/"
      >‚Üê Back to Home</a
    >
    <h1 class="text-4xl font-bold mb-8 text-center">All Users</h1>

    <div
      class="grid gap-6 grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4"
    >
      <% users.forEach(function(user) { %>
      <div class="bg-zinc-800 p-5 rounded-xl shadow-lg flex flex-col">
        <img
          class="w-full h-40 object-cover rounded-lg mb-4"
          src="<%= user.image %>"
          alt="User Image"
        />
        <h2 class="text-xl font-semibold mb-1"><%= user.name %></h2>
        <p class="text-zinc-400 mb-3"><%= user.email %></p>

        <div class="mt-auto flex justify-between items-center gap-2">
          <a
            href="/edit/<%= user._id %>"
            class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm font-medium"
          >
            Edit
          </a>
          <form action="/delete/<%= user._id %>" method="POST">
            <button
              type="submit"
              class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg text-sm font-medium"
              onclick="return confirm('Are you sure you want to delete this user?')"
            >
              Delete
            </button>
          </form>
        </div>
      </div>
      <% }) %>
    </div>
  </body>
</html>
